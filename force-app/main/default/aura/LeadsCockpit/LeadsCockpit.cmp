<aura:component description="LeadsCockpit" controller="LeadsCockpitController" implements="flexipage:availableForAllPageTypes,force:appHostable" access="global">
    <aura:attribute name="displayCockpit" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:if isTrue="{!v.displayCockpit}">
        <c:leadScoreToggle/>
    <aura:set attribute="else">
        <lightning:card>
            <div id="illustration">
            </div>
        </lightning:card>
    </aura:set>
    </aura:if>
</aura:component>